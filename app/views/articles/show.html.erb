
  <div class="article_box">

    <div class="article_title">
      <%= @article.title %>
    </div>

    <div class="article_content">
      <%= formatted_text(@article.content) %>
    </div>

    <div class="article_box_footer">

      <div class="article_tags">
        Tags: <%= raw list_of_tags(@article.tags) %>
      </div>
      
      <div class="article_published_at">
        Published at: <%= @article.published_at %>
      </div>

    </div>

    <div id="article_new_comment">
      <%= form_for :comment, :url => article_comments_path(@article) do |form| %>
        <% if current_user %>
          <div class="field">
            <%= current_user.nickname %>
          </div>  
        <% else %>
          <div class="field">
            <%= form.label :user_nickname %><br />
            <%= form.text_field :user_nickname %>
          </div>      
  
          <div class="field">
            <%= form.label :user_location %> (optional)<br />
            <%= form.text_field :user_location %>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :title %><br />
          <%= form.text_field :title %>
        </div>      

        <div class="field">
          <%= form.label :content %><br />
          <%= form.text_area :content, :cols => 20, :rows => 5 %>
        </div>
        
        <div class="actions">
          <%= form.submit %>
        </div>        
      <% end %>
    </div>

    <div id="article_comments">

      <% @article.comments.each do |comment| %>
        <div class="comment_box">
          <div class="comment_title">
            <%= user_info(comment) %>
            <%= comment.title %>
            <span class="comment_published_at">            
              <%= comment.created_at %>
            </span>
          </div>
          
          <div class="comment_content">
            <%= comment.content %>
          </div>
          
          <div>
            <% if current_user.try(:admin?) %>
              <%= link_to "delete", [ @article, comment ], :confirm => "Are you sure?", :method => :delete  %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    
  </div>

