= form_for(@article) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= pluralize(@article.errors.count, "error") + " prohibited this article from being saved:"

      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title

  .field
    = f.label :content
    %br
    = f.text_area :content

  .field
    = f.label :tags
    %br
    = text_field_tag "article[tags]", @article.tags.join(" ")

  .actions= f.submit
